<h1>Nuevo Libro</h1>
<%= form_for :book, :url => { :action => :create } do |f| %>
    <p>
      <%= f.label :nombre %><br>
      <%= f.text_field :nombre %>
    </p>

    <p>
      <%= f.label :author %><br>
      <%= f.select(:author) do %>
          <% @author.each do |a| %>
              <%= content_tag(:option, a.nombre, value:a.id) %>
          <%end%>
      <%end%>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>

