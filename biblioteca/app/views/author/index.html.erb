<h1>Autores</h1>

<%= link_to 'Nuevo', author_new_path %>

<table>
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Apellidos</th>
  </tr>
  </thead>

  <tbody>
  <% @author.each do |author| %>
      <tr>
        <td><%= author.nombre %></td>
        <td><%= link_to 'Ver Autor', author %></td>
        <td><%= link_to 'Editar', :action => :edit, :id => author.id %></td>
        <td><%= link_to 'Eliminar', author, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Atrás', author_index_path %>
