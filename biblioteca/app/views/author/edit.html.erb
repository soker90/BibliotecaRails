<h1>Editar Autor</h1>

<%= form_for :author, :url => { :action => :update, :id => @author.id },
             :method => :put do |f| %>
    <p>
      <%= f.label :nombre %><br>
      <%= f.text_field :nombre %>
    </p>

    <p>
      <%= f.label :apellidos %><br>
      <%= f.text_field :apellidos %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>

